Public Class Form1
#Region "variables"
    Dim shotAnimationCounter As Integer
    Dim duckAnimationCounter As Integer
#End Region

    Private Sub Form1_Load(sender As Object, e As EventArgs) Handles MyBase.Load
        shotAnimationCounter = 0
        duckAnimationCounter = 0
    End Sub
    
    'There needs to be a picturebox named field
    Private Sub field_MouseMove1(sender As Object, e As MouseEventArgs) Handles field.MouseMove
        gun.Left = e.Location.X - gun.Width / 2
    End Sub

    Private Sub field_Click(sender As Object, e As EventArgs) Handles field.Click
        shootTimer.Start()
    End Sub

    Private Sub duck_Click(sender As Object, e As EventArgs) Handles duck.Click
        duckAnimation.Stop()
        duck.Image = duckHit.Image
    End Sub
'Don't forget to add the DuckAnimation Timer and the shootTimer




End Class
